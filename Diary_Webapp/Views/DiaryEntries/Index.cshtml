@Model List<DiaryEntry></DiaryEntry>

<div class="table-responsive">>
        <table class="table table-striped table-hover"">

            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                    @foreach(var entry in Model)
                    {
                        <tr>
                            <td>@entry.Title</td>
                            <td>@entry.Content</td>
                            <td>@entry.Created</td>
                            <td>Edit and Delete!</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
      </table>