@model DiaryEntry

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Edit Diary Entry</h4>
                </div>
                <div class="card-body">
                    <form id="diaryForm" asp-action="Edit" method="post">
                        <div asp-validation-summary="All" class="text-bg-danger"></div>

                        <!-- Title Field -->
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter a title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Content Field -->
                        <div class="form-group mb-3">
                            <label asp-for="Content" class="form-label">Content</label>
                            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Write your entry..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <!-- Date Field -->
                        <div class="form-group mb-3">
                            <label asp-for="CreatedAt" class="form-label">Date</label>
                            <input asp-for="CreatedAt" type="date" class="form-control" />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success">Edit</button>
                        <button type="button" class="btn btn-warning" onclick="clearForm()">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function clearForm() {
            if (confirm("Are you sure you want to clear this entry?")) {
                document.getElementById("diaryForm").reset();
            }
        }
    </script>
}
