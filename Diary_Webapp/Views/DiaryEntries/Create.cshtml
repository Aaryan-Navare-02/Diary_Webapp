@model DiaryEntry

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Create / Edit Diary Entry</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <!-- Title Field -->
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter a title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Content Field -->
                        <div class="form-group mb-3">
                            <label asp-for="Content" class="form-label">Content</label>
                            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Write your entry..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <!-- Date Field -->
                        <div class="form-group mb-3">
                            <label asp-for="CreatedAt" class="form-label">Date</label>
                            <input asp-for="CreatedAt" type="date" class="form-control" />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success">Create</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
